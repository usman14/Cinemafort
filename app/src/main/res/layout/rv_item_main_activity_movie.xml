<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:id="@+id/rl_main_activity_movie"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_view_movie_adapter"
        android:layout_width="100dp"
        android:layout_marginLeft="10dp"
        android:layout_height="120dp" />
    <TextView
        android:id="@+id/tv_movie_adapter_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="12dp"
        android:layout_toRightOf="@id/img_view_movie_adapter" />
    <TextView
        android:id="@+id/tv_movie_adapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_movie_adapter_year"
        android:layout_toRightOf="@id/img_view_movie_adapter"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_movie_adapter_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_below="@+id/tv_movie_adapter_name"
        android:layout_toRightOf="@id/img_view_movie_adapter" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/img_view_movie_adapter_one"
        android:layout_marginLeft="10dp"
        android:background="@drawable/moviedb"
        android:layout_below="@+id/tv_movie_adapter_genre"
        android:layout_toRightOf="@id/img_view_movie_adapter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_adapter_name_rating"
        android:layout_below="@+id/tv_movie_adapter_genre"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/img_view_movie_adapter_one" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/img_view_movie_adapter">

    </View>
</RelativeLayout>