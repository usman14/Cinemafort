<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/rl_main_activity_movie"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_view_movie_adapter"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />
    <TextView
        android:id="@+id/tv_movie_adapter_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/tv_normal_size"
        app:layout_constraintLeft_toRightOf="@+id/guideline3"
         />
    <TextView
        android:id="@+id/tv_movie_adapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_adapter_year"
        app:layout_constraintLeft_toRightOf="@+id/guideline3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/tv_heading_size"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_movie_adapter_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_adapter_name"
        app:layout_constraintLeft_toRightOf="@+id/guideline3"
        app:layout_constraintRight_toRightOf="parent" />
    <ImageView
        android:layout_width="@dimen/img_view_logo_db_width"
        android:layout_height="@dimen/img_view_logo_db_height"
        android:id="@+id/img_view_movie_adapter_one"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/moviedb"

        app:layout_constraintTop_toBottomOf="@+id/tv_movie_adapter_genre"
        app:layout_constraintLeft_toRightOf="@+id/guideline3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_movie_adapter_name_rating"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_adapter_genre"
        app:layout_constraintLeft_toRightOf="@+id/img_view_movie_adapter_one"
        android:layout_marginLeft="8dp" />

    <View
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_adapter_name_rating"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0">

    </View>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />


</android.support.constraint.ConstraintLayout>