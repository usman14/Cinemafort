<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_view_movie_adapter_gridview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        />


    <TextView
        android:id="@+id/tv_movie_adapter_name_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:paddingLeft="5dp"

        android:background="@color/wheat"
        android:layout_alignEnd="@+id/img_view_movie_adapter_gridview"
        android:layout_below="@+id/img_view_movie_adapter_gridview" />
</RelativeLayout>