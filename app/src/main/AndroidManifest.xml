<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usman.videos">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Main_Activities.Activity_Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait"

            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main_Activities.Activity_Movie_Detail"
            android:screenOrientation="portrait"/>
        <activity android:name=".Main_Fragments.Fragment_WebApi"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Main_Activities.Activity_Cast"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Main_Activities.Activity_Search"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Main_Activities.Activity_Tv_Shows_Detail"
            android:screenOrientation="portrait"/>

    </application>

</manifest>